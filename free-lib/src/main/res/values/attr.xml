<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="indicator">
            <flag name="BallPulse" value="0"/>
            <flag name="BallGridPulse" value="1"/>
            <flag name="BallClipRotate" value="2"/>
            <flag name="BallClipRotatePulse" value="3"/>
            <flag name="SquareSpin" value="4"/>
            <flag name="BallClipRotateMultiple" value="5"/>
            <flag name="BallPulseRise" value="6"/>
            <flag name="BallRotate" value="7"/>
            <flag name="CubeTransition" value="8"/>
            <flag name="BallZigZag" value="9"/>
            <flag name="BallZigZagDeflect" value="10"/>
            <flag name="BallTrianglePath" value="11"/>
            <flag name="BallScale" value="12"/>
            <flag name="LineScale" value="13"/>
            <flag name="LineScaleParty" value="14"/>
            <flag name="BallScaleMultiple" value="15"/>
            <flag name="BallPulseSync" value="16"/>
            <flag name="BallBeat" value="17"/>
            <flag name="LineScalePulseOut" value="18"/>
            <flag name="LineScalePulseOutRapid" value="19"/>
            <flag name="BallScaleRipple" value="20"/>
            <flag name="BallScaleRippleMultiple" value="21"/>
            <flag name="BallSpinFadeLoader" value="22"/>
            <flag name="LineSpinFadeLoader" value="23"/>
            <flag name="TriangleSkewSpin" value="24"/>
            <flag name="Pacman" value="25"/>
            <flag name="BallGridBeat" value="26"/>
            <flag name="SemiCircleSpin" value="27"/>
        </attr>
        <attr name="indicator_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="TabView">
        <attr name="tabDrawable" format="reference" />
        <attr name="tabDrawableSize" format="dimension" />
        <attr name="tabDrawablePadding" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabText" format="string" />
        <attr name="tabSelected" format="boolean" />
        <attr name="countTextSize" format="dimension" />
        <attr name="countTextColor" format="color" />
        <attr name="countText" format="string" />
        <attr name="countBackgroundColor" format="color" />
        <attr name="indicateColor" format="color" />
        <attr name="indicateSize" format="dimension" />
        <attr name="sizeMode" format="enum">
            <!--自行设置-->
            <enum name="custom" value="0" />
            <!--以宽度为基准-->
            <enum name="base_width" value="1" />
            <!--以高度为基准-->
            <enum name="base_height" value="2" />
        </attr>
        <attr name="ratio" format="float" />
    </declare-styleable>

    <!--自定义带Image的TextView-->
    <declare-styleable name="ImageTextView">
        <!--默认情况下Image的尺寸-->
        <attr name="drawableSize" />
        <!--各个位置上的Image的尺寸-->
        <attr name="drawableTopSize" format="dimension" />
        <attr name="drawableLeftSize" format="dimension" />
        <attr name="drawableRightSize" format="dimension" />
        <attr name="drawableBottomSize" format="dimension" />
        <!--各个位置上Image的图片资源-->
        <attr name="drawableTop" format="reference" />
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableRight" format="reference" />
        <attr name="drawableBottom" format="reference" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" />
        <attr name="baseMode" format="enum" >
            <enum name="custom" value="0" />
            <enum name="base_width" value="1"/>
            <enum name="base_height" value="2"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="WheelView">
        <attr name="itemCount" format="integer" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedTextSize" format="dimension" />
        <attr name="nomalTextColor" format="color" />
        <attr name="nomalTextSize" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="ringWidth" format="dimension" />
        <attr name="ringColor" format="color|reference" />
        <attr name="ringBgColor" format="color|reference" />
        <attr name="progressTextColor" format="color|reference"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressTitle" format="string" />
        <attr name="progressTitleSize" format="dimension" />
        <attr name="progressTitleColor" format="color|reference" />
        <attr name="textPadding" format="dimension"/>
        <attr name="showText" format="boolean"/>
    </declare-styleable>

</resources>