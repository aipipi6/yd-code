<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fingerprint_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonItemHeight"
        android:background="@drawable/bg_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="添加指纹..."
        android:textColor="@color/blue"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spliteline"
        android:background="@color/spliteline"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spliteline"
        android:layout_marginTop="16dp"
        android:background="@color/spliteline"/>
    <TextView
        android:id="@+id/tv_fingerprint_all_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonItemHeight"
        android:background="@drawable/bg_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="全部删除..."
        android:textColor="@color/blue"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spliteline"
        android:background="@color/spliteline"/>

</LinearLayout>