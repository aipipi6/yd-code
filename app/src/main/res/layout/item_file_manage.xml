<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_item_file_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/type_dir"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_item_file_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件名称"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_item_file_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="文件：0，文件夹：1"
            android:textSize="12sp"
            android:textColor="#666"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_item_file_more"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/more"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spliteline"
        android:layout_alignParentBottom="true"
        android:background="@color/spliteline"/>

</RelativeLayout>