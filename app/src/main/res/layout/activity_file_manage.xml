<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_last_dir"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:minHeight="64dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_item_file_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/type_dir_last"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_item_file_icon"
            android:text="返回上一级"
            android:textColor="@color/blue"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spliteline"
            android:layout_alignParentBottom="true"
            android:background="@color/spliteline"/>

    </RelativeLayout>

    <include layout="@layout/layout_recyclerview"/>

</LinearLayout>