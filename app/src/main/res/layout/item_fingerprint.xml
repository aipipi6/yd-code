<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/commonItemHeight"
    android:background="@drawable/bg_white_selector">

    <TextView
        android:id="@+id/tv_fingerprint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:text="指纹1"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_fingerprint_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/delete"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spliteline"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:background="@color/spliteline"/>
</RelativeLayout>